<%= turbo_frame_tag "new_quest_form" do %>
  <%= form_with(model: quest, local: false, html: { class: "flex flex-col sm:flex-row items-center gap-2 w-full" }) do |form| %>
    
    <!-- Input field -->
    <div class="flex-1 w-full">
      <%= form.label :name, class: "sr-only" %>
      <%= form.text_field :name,
            placeholder: "Enter quest",
            class: "block w-full shadow-sm rounded-md border px-3 py-2 focus:outline-indigo-600" %>
      <% if quest.errors[:name].any? %>
        <p class="text-red-500 text-sm mt-1"><%= quest.errors[:name].first %></p>
      <% end %>
    </div>

    <!-- Submit button -->
    <div class="flex-shrink-0 w-full sm:w-auto">
      <%= form.submit "Create Quest",
            class: "w-full sm:w-auto rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium transition" %>
    </div>

  <% end %>
<% end %>
