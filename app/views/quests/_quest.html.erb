<%= turbo_frame_tag dom_id(quest) do %>
  <div class="flex items-center justify-between bg-gray-50 p-4 rounded-xl shadow-sm border border-gray-200">
    <!-- Left: Checkbox + Todo text -->
    <div class="flex items-center space-x-4">
      <%= form_with model: quest, method: :patch, class: "flex items-center" do |f| %>
        <%= f.check_box :is_done,
              checked: quest.is_done,
              class: "w-5 h-5 text-indigo-600 border-gray-300 rounded",
              data: { controller: "checkbox", action: "change->checkbox#submit" } %>
      <% end %>
      <span class="<%= quest.is_done ? 'line-through text-gray-400' : 'text-gray-800' %> font-medium">
        <%= quest.name %>
      </span>
    </div>

    <!-- Right: Delete button -->
    <%= link_to quest_path(quest), data: { turbo_method: :delete }, class: "text-red-500 hover:text-red-700 font-semibold" do %>
      Delete
    <% end %>
  </div>
<% end %>
