<%= turbo_stream.prepend "quests" do %>
  <div data-controller="scroll" data-scroll-target-id-value="<%= dom_id(@quest) %>">
    <%= render partial: "quest", locals: { quest: @quest } %>
  </div>
<% end %>

<%= turbo_stream.replace "new_quest_form" do %>
  <%= render "form", quest: Quest.new %>
<% end %>
